<section class="active-main" id="presentation">
    <div class="container">
        <div class="col-sm-6">
            <img itemprop="image" src="img/id-malick-002.jpg" title="Malick Belgrine" alt="Malick Belgrine">
        </div>
        <div class="col-sm-6" itemscope itemtype="http://schema.org/Person">
            <h1 itemprop="name"><%= presentation[0].titre %></h1>
            <p>Autodidacte, je suis développeur <a href="#<%= presentation[0].firstLink %>"><%= presentation[0].textLink %></a>, <a href="#<%= presentation[0].secondLink %>"><%= presentation[0].secondLink %></a> <%= presentation[0].secondPart %></p>
